require("xix")


-- Function to print keybindings and their purposes
local function print_keybindings()
    print("----- Keybindings -----")
    print("<SPACE>pv       Run the 'Ex' command in normal mode")
    print("J               Move the selected lines downwards in visual mode and keep the selection")
    print("K               Move the selected lines upwards in visual mode and keep the selection")
    print("J               Join the current line with the one below it, removing the line break")
    print("<C-d>           Scroll down and move the cursor to the middle of the screen")
    print("<C-u>           Scroll up and move the cursor to the middle of the screen")
    print("n               Move to the next search match and center the screen on the match")
    print("N               Move to the previous search match and center the screen on the match")
    print("<SPACE>p        Paste the last deleted or yanked text in visual mode")
    print("<SPACE>y        Yank (copy) the selected text to the system clipboard in normal or visual mode")
    print("<SPACE>Y        Yank (copy) from the cursor position to the end of the line and to the system clipboard in normal mode")
    print("<SPACE>d        Delete the selected text in normal or visual mode")
    print("<C-c>           Exit insert mode and go back to normal mode")
    print("Q               Disable the Ex mode (legacy command-line mode) in normal mode")
    print("<C-f>           Open a new tmux window and run the 'tmux-sessionizer' command in normal mode")
    print("<SPACE>f        Run the LSP 'format' command for the current buffer in normal mode")
    print("<C-k>           Go to the next error or warning in the quickfix list and center the screen on it in normal mode")
    print("<C-j>           Go to the previous error or warning in the quickfix list and center the screen on it in normal mode")
    print("<SPACE>k        Go to the next location in the location list and center the screen on it in normal mode")
    print("<SPACE>j        Go to the previous location in the location list and center the screen on it in normal mode")
    print("<SPACE>s        Search and replace the word under the cursor in the entire buffer, case-insensitive, and leave the cursor at the first match in normal mode")
    print("<SPACE>x        Make the current file executable by running the 'chmod +x' command in normal mode")
    print("<SPACE>vpp      Edit the 'packer.lua' configuration file in the 'nvim/lua/theprimeagen/' directory in normal mode")
    print("<SPACE>mr       Run the 'CellularAutomaton make_it_rain' command in normal mode")
    print("<SPACE><SPACE>  Source (reload) the current file in normal mode")

    print("<SPACE>ri       Refactor 'Inline Variable' in visual mode")
    print("<SPACE>zz       Sets up and toggles Zen Mode")
    print("<SPACE>zZ       Sets up and toggles another configuration for Zen Mode")
    print("<SPACE>gs       Run the 'Git' command in normal mode")
    print("<SPACE>p        Runs `git push` to push changes to the remote repository")
    print("<SPACE>P        Runs `git pull --rebase` to perform a rebase while pulling changes from the remote repository.")
    print("<SPACE>t        Run 'git push -u origin ' in normal mode")
    print("<SPACE>a        Adds the current file to the list of bookmarks in Harpoon.")
    print("<C-e>           Toggle the quick menu in normal mode")
    print("<C-h>           Navigate to the 1st Bookmarked file in Harpoon.")
    print("<C-t>           Navigate to the 2nd Bookmarked file in Harpoon.")
    print("<C-n>           Navigate to the 3rd Bookmarked file in Harpoon.")
    print("<C-s>           Navigate to the 4th Bookmarked file in Harpoon.")
    print("<SPACE>pf       Run the 'find_files' function in normal mode")
    print("<C-p>           Run the 'git_files' function in normal mode")
    print("<SPACE>ps       GREP (search) for a specific string within your projec")
    print("<SPACE>vh       Run the 'help_tags' function in normal mode")
    print("<SPACE>xq       Toggle the 'quickfix' window using the TroubleToggle plugin in normal mode")
    print("gd              Go to the definition of the symbol under the cursor in normal mode")
    print("K               Show hover information for the symbol under the cursor in normal mode")
    print("<SPACE>vws      Show workspace symbols using LSP in normal mode")
    print("<SPACE>vd       Open the diagnostic popup for the current line in normal mode")
    print("[d              Go to the next diagnostic in the quickfix list in normal mode")
    print("]d              Go to the previous diagnostic in the quickfix list in normal mode")
    print("<SPACE>vca      Run code actions for the current line in normal mode")
    print("<SPACE>vrr      Find references for the symbol under the cursor in normal mode")
    print("<SPACE>vrn      Rename the symbol under the cursor in normal mode")
    print("<C-h>           Show signature help for the function call in insert mode")
    print("<SPACE>u        Toggle the Undotree window in normal mode")


    print("-----------------------")
end

-- Call the function to print keybindings during startup
